<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:backgroundTint="@color/Surface1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/imgExit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_back"
                />


            <TextView
                android:id="@+id/txtQuestionSetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/txtResultsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="@string/results"
                android:layout_below="@id/imgExit"
                />



            <TextView
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_below="@id/txtResultsText"
                />


            <TextView
                android:id="@+id/txtResultQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_below="@id/txtResult"
                />



            <TextView

                android:id="@+id/txtResultPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_below="@id/txtResultQuestions"
                />






        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</ScrollView>