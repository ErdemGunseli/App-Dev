<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketMaths" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/Menu</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/Primary</item>

        <item name="fontFamily">@font/metropolis_light</item>

        <item name="android:windowBackground">@drawable/default_symbols_background_bitmap</item>

        <item name="materialCardViewStyle">@style/cv1</item>

        <item name="editTextStyle">@style/edtTxt</item>

        <item name="materialButtonStyle">@style/btn</item>

        <item name="radioButtonStyle">@style/rbtn</item>



    </style>

    <!-- CardView Theme -->

    <style name="cv1" parent="">
        <item name="cardBackgroundColor">@color/Surface1</item>
        <item name="elevation">100dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="cv2" parent="">
        <item name="cardBackgroundColor">@color/Surface2</item>
        <item name="elevation">100dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="cv3" parent="">
        <item name="cardBackgroundColor">@color/Surface3</item>
        <item name="elevation">100dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <!-- EditText Theme -->

    <style name="edtTxt" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/Primary</item>
        <item name="android:textColor">@color/Primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button Theme -->

    <style name="btn" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/Accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Radio Button Theme -->

    <style name="rbtn" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/Primary</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:buttonTint">@color/Surface3</item>
    </style>

</resources>